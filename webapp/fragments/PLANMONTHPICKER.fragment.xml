<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Dialog id="dateplanmonth" icon=""  title="Enter Date" class="sapUiNoContentPadding sapUiSizeCompact" verticalScrolling="true"
		type="Standard" draggable="true">
		<content>
			
			<DatePicker
			id="month"
			value="2014-03-27" valueFormat="yyyy-MM-dd" displayFormat="long"
			change="handleChange"
			class="sapUiSmallMarginBottom"/>

		</content>
			<Button text="Close" press="onPLMonthClose" visible ="true"></Button>
		<endButton>
			<Button text="Select" press="onPLMonthSelect" visible="true"></Button>  
		
		</endButton>
	</Dialog> 
</core:FragmentDefinition>